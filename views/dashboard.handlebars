<div class="row">
    <div class="col s12 m4 l5">
    </div>

</div>
<div class="row">
    <div style="background-color: #546e7a; position: sticky; top: 0; border-radius: 5px;" class="col s1 catagories">
        <div class="catagoriesList">
            <h1 class="center-align white-text">Inventory Options</h1>
        </div>
        <br>
        <div class="center-align">
            <button class="btn-large waves-effect waves-light" style="background-color:#03a9f4; border-radius: 5px;"
                type="button" onclick="" class="create">Create</button>
        </div>
        <br>
        <div class="center-align">
            <button class="btn-large waves-effect waves-light" style="background-color:#4caf50;border-radius: 5px;"
                type="button" onclick="" class="update">Update</button>
        </div>
        <br>
        <div class="center-align">
            <button class="btn-large  waves-effect waves-dark" style="background-color:#d50000; border-radius: 5px;"
                type="button" onclick="" class="delete">Delete</button>
        </div>
        <br>
        <div class="center-align">
            <button class="btn-large  waves-effect waves-light" type="button"
                style="background-color:blue; border-radius: 5px;" id="logout" class="showAll">Log
                Out</button>
        </div>
        <br>
    </div>

    <div class="col s4 browser-default" style="margin-left:100px">
        <label>
            <h4>Select Category</h4>
        </label>
        <select class="browser-default">
            <option value="" disabled selected>Categories</option>
            <option value="1">PCs</option>
            <option value="2">Monitors</option>
            <option value="3">Laptops</option>
            <option value="4">Servers</option>
            <option value="5">Misc.</option>
            <option value="6">Switches</option>
            <option value="7">Tablets</option>
        </select>
    </div>
    <div class="col s9">
        <table style="margin-left:100px;margin-right:auto;">
            <thead style="font-size:15px">
                <tr>
                    <th></th>
                    <th>TAG#</th>
                    <th>Name:</th>
                    <th>Description:</th>
                    <th>Unit Price:</th>
                    <th>Stock</th>
                    <th>Category</th>
                </tr>
            </thead>

            <tbody>
                {{#each products}}
                <tr>
                    <td>
                        <p>
                            <label>
                                <input type="checkbox" class="filled-in" />
                                <span></span>
                            </label>
                        </p>
                    </td>
                    <td>{{this.dataValues.id}}</td>
                    <td>{{this.dataValues.product_name}}</td>
                    <td>{{this.dataValues.description}}</td>
                    <td>${{this.dataValues.price}}.00</td>
                    <td>{{this.dataValues.stock}}</td>
                    <td>{{this.dataValues.category.category_name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>
<script src="/javascript/dashboard.js"></script>
<script src="/javascript/logout.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>